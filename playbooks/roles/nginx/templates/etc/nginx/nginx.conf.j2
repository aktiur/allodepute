# {{ ansible_managed }}

user www-data;
worker_processes auto;
pid /run/nginx.pid;
{% if nginx_latest_ppa or ansible_distribution_release == "bionic" %}
include /etc/nginx/modules-enabled/*;
{% endif %}

events {
	worker_connections 768;
	# multi_accept on;
}

http {

	##
	# Basic Settings
	##

	sendfile on;
	tcp_nopush on;
	tcp_nodelay on;
	keepalive_timeout 65;
	types_hash_max_size 2048;
	# server_tokens off;

    # set client body size to 25M #
    client_max_body_size 25M;

	# server_names_hash_bucket_size 64;
	# server_name_in_redirect off;

	include /etc/nginx/mime.types;
	default_type application/octet-stream;

	##
	# SSL Settings
	##
	ssl_dhparam                 dhparams.pem;
	ssl_protocols               TLSv1 TLSv1.1 TLSv1.2;
	ssl_ciphers                 EECDH+CHACHA20:EECDH+CHACHA20-draft:EECDH+AES128:RSA+AES128:EECDH+AES256:RSA+AES256:EECDH+3DES:RSA+3DES:!MD5;
	ssl_prefer_server_ciphers   on;

    {% if cloudflare_protected %}
    map $http_cf_connecting_ip $real_ip {
        default $http_cf_connecting_ip;
        "" $remote_addr;
    }
    {% endif %}

	##
	# Logging Settings
	##

	access_log /var/log/nginx/access.log;
	error_log /var/log/nginx/error.log;

	log_format fastcgi_cache '{{ "$real_ip" if cloudflare_protected else "$remote_addr" }} '
	                '- $upstream_cache_status [$time_local] "$request" $status $body_bytes_sent '
                    '"$http_referer" "$http_user_agent"';

	log_format default '{{ "$real_ip" if cloudflare_protected else "$remote_addr" }} '
	                '- $remote_user [$time_local] "$request" $status $body_bytes_sent '
                    '"$http_referer" "$http_user_agent"';

	##
	# Gzip Settings
	##

	gzip on;
	gzip_disable "msie6";

	gzip_vary on;
	gzip_proxied any;
	gzip_comp_level 6;
	gzip_buffers 16 8k;
	gzip_http_version 1.1;
	gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;


	##
	# Virtual Host Configs
	##

	include /etc/nginx/conf.d/*.conf;
	include /etc/nginx/sites-enabled/*;
}

